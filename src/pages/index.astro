---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  //"https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  //"https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  //"https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  //"https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Chat with Optiplus Sales Team"
    url="https://wa.me/+254702220545"
  />

  <HeroSection
  title=`See the World Clearly with <span class="text-yellow-500 dark:text-yellow-400">OptiPlus</span>`
  subTitle="Premium eyewear solutions for sharp vision and unmatched style. Discover a collection that blends comfort, technology, and elegance."
  primaryBtn="Start Exploring"
  primaryBtnURL="/products"
  secondaryBtn="Contact Sales Team"
  secondaryBtnURL="https://wa.me/+254797342380?text=Hello%2C%20OptiPlus%20can%20I%20get%20more%20information%20on%20frames%20at%20your%20shops%3F"
  withReview={true}
  avatars={avatarSrcs}
  rating=`<span class="font-bold">4.8</span> / 5`
  starCount={4}
  reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
  src={heroImage}
  alt="Elegant eyewear display showcasing OptiPlus products"
/>



  <FeaturesGeneral
    title="Eyewear Designed for Every Lifestyle"
    subTitle="At OptiPlus, we offer high-quality lenses and frames to enhance vision and style. Explore durable, fashion-forward eyewear tailored to your needs."
    src={featureImage}
    alt="Variety of stylish glasses displayed on a modern setup"
    features={features}
  />

  <FeaturesNavs
    title=`Customize <span class="text-yellow-500 dark:text-yellow-400">Optiplus </span>Eyewear for the Perfect Fit.`
    tabs={[
      {
        heading: "Advanced Lenses",
        content:
          "Experience cutting-edge lens technology, including blue light filtering, UV protection, and prescription customization for crystal-clear vision.",
        svg: "tools",
        src: tools,
        alt: "A showcase of premium optical lenses with anti-glare protection",
        first: true,
      },
      {
        heading: "Stylish Frames",
        content:
          "Choose from a wide range of frames, from classic designs to modern fashion statements. Our collection is crafted for comfort and durability.",
        svg: "dashboard",
        src: dashboard,
        alt: "Assorted designer frames neatly arranged on a display stand",
        second: true,
      },
      {
        heading: "Personalized Styling",
        content:
          "Find eyewear that complements your personality and enhances your look. Our experts help match you with the perfect pair.",
        svg: "house",
        src: construction,
        alt: "A fashion model wearing stylish OptiPlus eyewear with confidence",
      },
    ]}
  />

  <TestimonialsSection
    title="What Our Customers Say"
    subTitle="Join thousands of satisfied customers who trust OptiPlus for superior vision and style."
    ;
    testimonials={[
      {
        content:
          "OptiPlus completely transformed my eyewear experience! Their stylish frames and high-quality lenses are unmatched. Highly recommended!",
        author: "John Muthoni",
        role: "Fashion Enthusiast",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=320&h=320&auto=format&fit=crop&ixlib",
      },
    ]}
    statistics={[
      {
        count: "15k+",
        description:
          "satisfied customers enjoying premium eyewear solutions",
      },
      {
        count: "98%",
        description:
          "positive feedback on comfort and durability of our glasses",
      },
      {
        count: "30%",
        description:
          "reduction in eye strain with our blue light filtering lenses",
      },
      {
        count: "5-star",
        description: "average rating from thousands of reviews",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Schedule your Visit"
    subTitle="Ensure optimal vision health with a professional eye check-up. Schedule an appointment with our trusted optometrists now."
    url="https://appointments.optiplus.co.ke"
   />
</MainLayout>
