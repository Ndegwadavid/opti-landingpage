---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://optiplus.co.ke/contact",
    "url": "https://optiplus.co.ke/contact",
    "name": "Contact Us | Optiplus",
    "description":
      "Have questions or want to discuss eyewear solutions? Reach out, and we'll get back to you in less than 24 hours.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://optiplus.co.ke",
      "name": "Optiplus",
      "description":
        "Optiplus offers a wide range of eyewear solutions to meet all your vision needs.",
    },
    "inLanguage": "en-US"
  }}
>
  <ContactSection 
    email="info@optikenya.com" 
    phoneNumbers={["+254702220545", "+254105165560"]} 
    branches={[
      "Moi Avenue, Nacico Chambers, Ground Floor", 
      "Ronald Ngala Street, Opposite Posta"
    ]}
  />
</MainLayout>
