---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Free Eye Consultations",
    subTitle:
      "At OptiPlus, we believe that everyone deserves access to quality eye care. Our free eye consultations allow you to discuss your vision needs with our experienced optometrists. Whether you're experiencing vision problems or just need a routine check-up, we're here to help.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Optometrist providing a free eye consultation.",
    imgTwo: personWorking,
    imgTwoAlt: "Patient receiving personalized eyewear consultation.",
  },
  {
    isRightSection: false,
    title: "Easy Appointment Booking",
    subTitle:
      "Scheduling your eye care appointments has never been easier. With our free online booking system, you can select a time that works for you and manage your appointments effortlessly. Experience convenience at your fingertips.",
    img: beforeAfter,
    imgAlt: "Online appointment booking interface",
    btnExists: true,
    btnTitle: "Book Your Appointment",
    btnURL: "https://appointments.optiplus.co.ke",
  },
  {
    isRightSection: true,
    title: "Comprehensive Eye Exams",
    subTitle:
      "Our comprehensive eye exams are designed to assess your vision and eye health thoroughly. We utilize the latest technology and techniques to ensure accurate diagnoses and effective treatment plans, tailored to your individual needs.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Patient undergoing an eye examination",
    imgTwo: aerialView,
    imgTwoAlt: "Assorted contact lenses available for selection",
  },
  {
    isRightSection: false,
    title: "Wide Selection of Eyewear",
    subTitle:
      "Choose from a diverse range of eyewear options, including stylish frames and high-quality lenses. Our knowledgeable staff is here to assist you in finding the perfect pair that suits your style and vision requirements.",
    img: usingTools,
    imgAlt:
      "Selection of stylish eyewear frames",
  },
  {
    isRightSection: true,
    title: "Exceptional Customer Service",
    subTitle:
      "At OptiPlus, we pride ourselves on delivering exceptional customer service. Our friendly team is dedicated to ensuring your experience is smooth and enjoyable, from your first consultation to your eyewear fitting.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Customer service representative assisting a client",
    imgTwo: underConstruction,
    imgTwoAlt: "Optometrist explaining eye health to a patient",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://optiplus.com/services",
    "url": "https://optiplus.com/services",
    "name": "Expert Eye Care Services | OptiPlus",
    "description": "OptiPlus offers exceptional eye care services, including free consultations, comprehensive eye exams, and a wide selection of eyewear tailored to your vision needs.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://optiplus.com",
        "name": "Optiplus",
        "description": "OptiPlus provides top-tier eye care services and stylish eyewear to meet all your vision needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Your Vision, Our Priority"
    subTitle="At OptiPlus, we are dedicated to providing comprehensive eye care solutions and exceptional service. Our experienced team is committed to supporting your vision health with a range of specialized services."
    btnExists={true}
    btnTitle="Schedule a Free Consultation"
    btnURL="https://appointments.optiplus.co.ke"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="At OptiPlus, we are proud of our commitment to quality eye care. Our services are designed to ensure your vision health and satisfaction."
    mainStatTitle="98%"
    mainStatSubTitle="of our clients recommend OptiPlus for eye care services"
    stats={[
      {
        stat: "100%",
        description: "satisfaction guarantee",
      },
      {
        stat: "10,000+",
        description: "successful eye exams conducted",
      },
      {
        stat: "95%",
        description: "client retention rate",
      },
    ]}
  />
</MainLayout>
